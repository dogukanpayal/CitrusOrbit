<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/state_unchecked"
        android:drawable="@drawable/checkbox_unchecked"/>

    <item
        android:id="@+id/state_checked"
        android:state_checked="true"
        android:drawable="@drawable/avd_checkbox_check"/>

    <transition
        android:fromId="@id/state_unchecked"
        android:toId="@id/state_checked"
        android:drawable="@drawable/avd_checkbox_check" />

    <transition
        android:fromId="@id/state_checked"
        android:toId="@id/state_unchecked"
        android:drawable="@drawable/checkbox_unchecked" />

</animated-selector>


